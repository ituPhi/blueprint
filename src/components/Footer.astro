---
import { Icon } from "astro-icon/components";
import footerLinks from "../data/navData.json";

// Social icons data
const socialIcons = [
  { href: "#", src: "FacebookIcn", alt: "Facebook" },
  { href: "#", src: "InstagramIcn", alt: "Instagram" },
  { href: "#", src: "XIcn", alt: "X" },
];
---

<footer class="bg-orion-gray-950 text-orion-gray-50 py-6 w-screen">
  <div class="container max-w-[1440px] mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 items-center px-2 md:px-4">
      <div id="footer-logo" class="flex items-center justify-center md:justify-start space-x-4 mb-4 md:mb-0">
        <a href="/">
          <Icon name={"logo-white"} width={150} height={50} class="text-white" />
        </a>
      </div>
      <div id="footer-links" class="flex items-center space-x-4 justify-center">
        {
          footerLinks.map((link) => (
            <a href={link.href} class="text-sm text-nowrap">
              {link.name}
            </a>
          ))
        }
      </div>
      <div>
        <div id="icons-social" class="flex items-center space-x-4 justify-center md:justify-end">
          {
            socialIcons.map((icon) => (
              <a href={icon.href} class="text-white pt-4 md:pt-0 text-sm">
                <Icon name={icon.src} width={24} height={24} />
              </a>
            ))
          }
        </div>
      </div>
    </div>
    <hr class="border-t border-orion-gray-700 my-4" />
  </div>
</footer>
